# 远端服务器配置（示例）
REMOTE_HOST=
REMOTE_USER=root
REMOTE_PORT=22

# 若希望自动免交互登录，设置 SSH_PASSWORD 并安装 sshpass（可选）
SSH_PASSWORD=

# 站点域名（可选）；若留空则使用公网IP构建前端 API 基础地址
DOMAIN=

# 后端监听端口
API_PORT=3001

# 是否申请HTTPS证书（需要DOMAIN）
USE_HTTPS=false

# 是否配置UFW（同时需在云控制台放行 80/443/22）
SETUP_FIREWALL=true

# 是否复制本地的 uploads 和数据库到云端
COPY_UPLOADS=true
COPY_DB=true