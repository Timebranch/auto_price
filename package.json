{
  "name": "auto-price-system",
  "version": "1.0.0",
  "description": "自动报价单生成系统",
  "author": "Timebranch",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:client:electron": "cd client && cross-env VITE_TARGET=electron VITE_API_BASE_URL=http://localhost:3005 npm run build-only",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5184 electron electron/main.js",
    "build:electron": "npm run build:server && npm run build:client:electron && electron-builder",
    "build:electron:win": "npm run build:server && npm run build:client:electron && electron-builder --win",
    "build:client:electron:remote": "cd client && cross-env VITE_TARGET=electron npm run build-only",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "e2e:install": "playwright install",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^24.9.5"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.guangda.auto-price",
    "productName": "光大协同办公",
    "mac": { "target": "dmg", "icon": "build/icon.icns" },
    "win": { "target": "nsis", "artifactName": "光大协同办公-${version}-win-${arch}.exe", "icon": "build/icon.ico" },
    "files": [
      "electron/**",
      "client/dist/**"
    ],
    "extraResources": [
      { "from": "config", "to": "config" },
      { "from": "server/dist", "to": "server/dist" },
      { "from": "server/package.json", "to": "server/package.json" },
      { "from": "server/node_modules", "to": "server/node_modules" },
      { "from": "server/data", "to": "server/data" },
      { "from": "server/uploads", "to": "server/uploads" }
    ]
  }
}
